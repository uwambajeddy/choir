<body>
    <aside class="sidebar">
        <h3><input type="text" placeholder="search..."><i class="fas fa-search" type="submit"></i>
        </h3>
        <div class="popular-post">
            <h2>Popular Post</h2>

            <% if(dail_word.length > 0) { %>
            <% dail_word.forEach( function(dail_words){ %>
            <div class="post-content" data-aos="flip-up" data-aos-delay="200" style="
                border:1px solid black;">


                <div class="post-title">
                    <p>category : <a href="/dailyword" style="color: rgb(117, 146, 10)">Daily word</a></p>
                    <a href=" #"><%=dail_words.dail_word_title%></a><br>
                    <span><%=dail_words.dail_word_content%></span>
                </div><br>
                <div class="post-image">

                    <div class="post-info flex-row">

                        <span>
                            <i class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%=dail_words.dail_word_date%>
                        </span>

                    </div>
                </div>
            </div><br>
            <% }); %>
            <% } %>


            <% if(sunday_preachings.length > 0) { %>
            <% sunday_preachings.forEach( function(sunday_preaching){ %>
            <div class="post-content" data-aos="flip-up" data-aos-delay="200" style="
            border:1px solid black;">


                <div class="post-title">
                    <p>category : <a href="/sundaypreachings" style="color: green;">sunday preachings</a></p>
                    <a href="#"><%=sunday_preaching.sunday_preachings_title%></a><br>
                    <span><%=sunday_preaching.sunday_preachings_content%></span>
                </div><br>
                <div class="post-image">

                    <div class="post-info flex-row">

                        <span>
                            <i
                                class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%=sunday_preaching.sunday_preachings_date%>
                        </span>

                    </div>
                </div>
            </div><br>
            <% }); %>
            <% } %>

            <% if(testimony.length > 0) { %>
            <% testimony.forEach( function(testimonys){ %>
            <div class="post-content" data-aos="flip-up" data-aos-delay="200" style="
                border:1px solid black;">


                <div class="post-title">
                    <p>category : <a href="/preachings" style="color: rgb(13, 23, 168);">testimony</a></p>
                    <a href="#"><%=testimonys.testimony_name%></a><br>
                    <span><%=testimonys.testimony_content%></span>
                </div>

            </div><br>
            <% }); %>
            <% } %>
            <% if(lumen_event.length > 0) { %>
            <% lumen_event.forEach( function(lumen_events){ %>
            <div class="post-content" data-aos="flip-up" data-aos-delay="400" style="
            border:1px solid black;">
                <div class="post-title">
                    <p>category : <a href="/lumenevents" style="color: rgb(137, 7, 163);">lumen events</a></p>
                </div>
                <div class="post-image">
                    <div>
                        <img src="/public/uploads/<%= lumen_events.lumen_name %>" class="img" alt="blog1">
                    </div>
                    <div class="post-info flex-row">
                        <span><i
                                class="fas fa-calendar-alt text-gray"></i>&nbsp;&nbsp;<%=lumen_events.lumen_updated_at%></span>

                    </div>
                </div>
                <div class="post-title">
                    <a href="#"><%=lumen_events.lumen_title%></a><br>
                    <span><%=lumen_events.lumen_content%></span>
                </div>
            </div><br>

            <% }); %>
            <% } %>

